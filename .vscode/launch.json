    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/armar-cli/bin/Debug/net7.0/Armar.CLI.dll",
            "args": [
                "sample",
                "--input",
                "test.json",
                "--replace"
            ],
            "cwd": "${workspaceFolder}/armar-cli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}